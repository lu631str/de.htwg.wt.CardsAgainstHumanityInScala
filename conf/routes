# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Controller for CaH

GET         /                    controllers.CahController.home
GET         /about               controllers.CahController.about
GET         /startGame           controllers.CahController.startGame
GET         /gameScreen          controllers.CahController.gameScreen

+nocsrf
POST        /eval/:input         controllers.CahController.eval(input: String)
+nocsrf
GET        /loadJson         controllers.CahController.loadJson()


GET     /websocket                  controllers.CahController.socket

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file        controllers.Assets.versioned(path="/public", file: Asset)
